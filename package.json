{
  "name": "veas",
  "version": "1.0.7",
  "description": "Veas CLI - Command-line interface for Veas platform",
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "main": "./dist/cli.js",
  "bin": {
    "veas": "./bin/veas.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "build:force": "rimraf dist && tsc || true",
    "prepublishOnly": "npm run build:force",
    "dev:setup": "bash scripts/setup-local-dev.sh",
    "dev:link": "npm run build:force && npm link && ln -sf $(which veas) $(dirname $(which veas))/veas-dev",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest",
    "test:unit": "vitest run --exclude 'src/test/e2e/**' --exclude 'src/**/*.e2e.test.ts'",
    "test:coverage": "vitest run --coverage --exclude 'src/test/e2e/**' --exclude 'src/**/*.e2e.test.ts'",
    "test:e2e": "vitest --config vitest.config.e2e.ts",
    "test:watch": "vitest --watch",
    "mcp:test": "tsx src/commands/mcp.ts test",
    "mcp:create-token": "tsx src/commands/pat.ts create",
    "mcp:list-projects": "tsx src/commands/mcp.ts list-projects",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "release": "npm run build && npm publish --access public",
    "release:patch": "npm run version:patch && npm run release",
    "release:minor": "npm run version:minor && npm run release",
    "release:major": "npm run version:major && npm run release"
  },
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@veas/protocol": "^0.1.8",
    "axios": "^1.11.0",
    "chalk": "^5.5.0",
    "chokidar": "^4.0.3",
    "commander": "^12.1.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-sse": "^1.0.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.1",
    "js-yaml": "^4.1.0",
    "node-cache": "^5.1.2",
    "open": "^10.2.0",
    "ora": "^8.2.0",
    "picocolors": "^1.1.1",
    "pkce-challenge": "^4.1.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/express": "^4.17.23",
    "@types/express-sse": "^0.5.1",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.17.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "rimraf": "^5.0.10",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "veas",
    "cli",
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "llm",
    "tools"
  ],
  "license": "MIT",
  "author": "Veas Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/veas-org/veas-cli.git"
  },
  "bugs": {
    "url": "https://github.com/veas-org/veas-cli/issues"
  },
  "homepage": "https://github.com/veas-org/veas-cli#readme"
}
